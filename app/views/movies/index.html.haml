-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{ @hilite_title ? {:class => 'hilite'} : {:class => 'no'} }= link_to "Movie Title", movies_path({:sort => "title"}), id: "title_header"
      %th Rating
      %th{ @hilite_release_date ? {:class => 'hilite'} : {:class => 'no'} }= link_to "Release Date", movies_path({:sort => "release_date"}), id: "release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
